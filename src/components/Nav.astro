---
const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/now', label: 'Now' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
  { href: '/links', label: 'Links' },
];

const currentPath = Astro.url.pathname;
---

<nav class="w-full max-w-content mx-auto px-6 pt-10 sm:pt-16 pb-0">
  <div class="flex flex-wrap items-center justify-between gap-4">
    <a href="/" class="text-text-primary hover:text-text-primary no-underline">
      <span class="font-serif text-xl">Parker Ferguson</span>
    </a>
    <div class="flex flex-wrap items-center gap-4 sm:gap-5">
      {navLinks.map(({ href, label }) => (
        <a
          href={href}
          class:list={[
            'text-sm transition-colors no-underline',
            currentPath.startsWith(href)
              ? 'text-text-primary'
              : 'text-text-muted hover:text-text-secondary',
          ]}
        >
          {label}
        </a>
      ))}
    </div>
  </div>
</nav>
