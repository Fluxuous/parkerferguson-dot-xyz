---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const postsByYear = posts.reduce((acc, post) => {
  const year = post.data.date.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof posts>);

const years = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<BaseLayout title="Blog" description="Writing by Parker Ferguson â€” on building, technology, and what's next.">
  <h1 class="font-serif text-3xl text-text-primary mb-3">Writing</h1>
  <p class="text-text-muted mb-10" style="line-height: 1.8;">
    Essays, notes, and ideas about building technology, working with AI,
    and the things I find most interesting right now.
  </p>

  {years.map((year) => (
    <section class="mb-10">
      <h2 class="font-serif text-lg text-text-muted mb-4">
        {year}
      </h2>
      <div class="space-y-2">
        {postsByYear[year].map((post) => (
          <a
            href={`/blog/${post.id}`}
            class="group flex items-baseline justify-between gap-4 py-1.5 no-underline"
          >
            <span class="text-text-primary group-hover:text-accent transition-colors">
              {post.data.title}
            </span>
            <span class="shrink-0 text-sm text-text-muted tabular-nums">
              {post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
            </span>
          </a>
        ))}
      </div>
    </section>
  ))}

  {posts.length === 0 && (
    <p class="text-text-muted italic">First posts coming soon.</p>
  )}
</BaseLayout>
