---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const links = (await getCollection('links'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Links" description="Things Parker Ferguson has found interesting.">
  <h1 class="font-serif text-3xl text-text-primary mb-3">Links</h1>
  <p class="text-text-muted mb-10" style="line-height: 1.8;">
    Things I've come across that stuck with me. Saved here partly for
    myself, partly in case they're useful to someone else.
  </p>

  <div class="space-y-6">
    {links.map((link) => (
      <div>
        <a
          href={link.data.url}
          class="text-text-primary no-underline hover:text-accent"
          target="_blank"
          rel="noopener"
        >
          {link.data.title}
        </a>
        {link.data.description && (
          <p class="text-sm text-text-muted mt-1">{link.data.description}</p>
        )}
        <span class="text-xs text-text-muted mt-1 block">
          {link.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
        </span>
      </div>
    ))}
  </div>

  {links.length === 0 && (
    <p class="text-text-muted italic">Nothing here yet. But soon.</p>
  )}
</BaseLayout>
